        <TextView
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/user_profile_stats_precent"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_stats_games"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_profile_stats_games"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_stats_banswer"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_profile_stats_banswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/user_profile_stats_canswer"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_profile_stats_canswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"/>

        <TextView
                android:text="Błędne odpowiedzi"
