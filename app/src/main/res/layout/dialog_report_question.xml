<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTranspery"
        >

    <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/view7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorButtonSecondary"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:text="zgłoś pytanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="@color/colorCorrectAnswer"
                android:textAlignment="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:fontFamily="@font/varela_round"
                android:typeface="normal"
                android:textAllCaps="true"/>

        <View
                android:layout_height="1dp"
                android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/friends_profile2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            android:src="@drawable/ic_error_"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            android:layout_marginTop="16dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name2"
            android:singleLine="false"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/addFriends"
            android:inputType="textMultiLine|text"
            android:hint="wpisz powód zgłoszenia"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/addFriends"
            app:layout_constraintStart_toStartOf="@+id/addFriends"
            android:maxLength="200"
            android:maxHeight="200dp"
            app:layout_constraintHeight_max="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_name4"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name3"
            android:singleLine="false"
            android:text="Powód zgłoszenia?"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/friends_profile2"
            app:layout_constraintStart_toStartOf="@+id/profile_name2"
            app:layout_constraintEnd_toEndOf="@+id/profile_name2"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name4"
            android:singleLine="false"
            android:text="ID Pytania:"
            android:textAlignment="center"
            android:textColor="@color/colorLigth"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/profile_name2"
            app:layout_constraintEnd_toEndOf="@+id/profile_name2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/profile_name3"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteFriends"
            android:layout_width="0dp"
            android:layout_height="38.66dp"
            android:text="anuluj"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="11sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:typeface="normal"
            android:fontFamily="@font/varela_round"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorWhite"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:iconSize="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginStart="32dp"
            app:iconPadding="-17dp"
            app:rippleColor="@color/colorButtonSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:iconTint="@color/colorWhite"
            app:backgroundTint="@color/colorBadAnswer"
            app:icon="@drawable/ic_remove"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/addFriends"
            android:layout_width="0dp"
            android:layout_height="38.66dp"
            android:text="Wyślij zgłoszenie"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/colorAccent"
            android:textSize="11sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:typeface="normal"
            android:fontFamily="@font/varela_round"
            app:layout_constraintStart_toStartOf="parent"
            app:iconTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            app:icon="@drawable/ic_check_icon"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:iconSize="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:iconPadding="-17dp"
            app:rippleColor="@color/colorButtonSecondary"
            app:layout_constraintBottom_toTopOf="@+id/deleteFriends"
            android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>