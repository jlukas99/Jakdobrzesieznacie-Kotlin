<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".fragments.ProfileFragment"
                                             android:background="@drawable/background_main">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout2"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="PROFIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:foregroundGravity="center_vertical|center_horizontal"
    >

        <TextView
                android:text="Suma błędnych odpowiedzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
        <TextView
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/profile_stats_friend_precent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_stats_games"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="105dp"
                android:layout_height="105dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502" android:background="@drawable/input_overlay_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="32dp"/>
        <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    style="@style/SpinKitView.MultiplePulse"
                                                    android:id="@+id/profile_loading_image"
                                                    app:layout_constraintTop_toTopOf="@+id/profile_image"
                                                    app:layout_constraintEnd_toEndOf="@+id/profile_image"
                                                    app:layout_constraintStart_toStartOf="@+id/profile_image"
                                                    app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                                                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_stats_games"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_stats_banswer"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3" app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="Nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profile_name"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_stats_banswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_stats_canswer"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="Średnia znajomość znajomych"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/profile_logout_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="WYLOGUJ"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorPrimary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:iconPadding="0dp" app:iconTint="@color/colorWhite"
                android:textColor="@color/colorWhite" app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintTop_toBottomOf="@+id/prfoile_premium_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" android:layout_marginBottom="32dp"/>
        <TextView
                android:text="Suma poprawnych odpowiedzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:textColor="@color/colorLigth"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout3" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/profile_name">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" android:id="@+id/view3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1"/>
            <TextView
                    android:text="STATYSTYKI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                    android:typeface="normal" android:textAllCaps="false"/>

            <View
                    android:layout_height="2dp" android:id="@+id/view5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

        </LinearLayout>
        <TextView
                android:text="Suma rozegranych gier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/prfoile_premium_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="AKTYWUJ KONTO PREMIUM"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorButtonSecondary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="32dp"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:icon="@drawable/ic_corn" app:iconPadding="0dp" app:iconTint="@color/colorYellow"
                android:textColor="@color/colorYellow" app:layout_constraintHorizontal_bias="0.493"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_stats_canswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintHorizontal_bias="1.0"/>
        <android.support.design.button.MaterialButton
                android:layout_width="35dp"
                android:layout_height="wrap_content" android:id="@+id/profile_settings_button"
                app:icon="@drawable/ic_settings" app:iconSize="35dp"
                app:iconPadding="0dp" android:backgroundTint="@color/colorTranspery" android:padding="0dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_image" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image" android:stateListAnimator="@null"
                android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.524"
                app:layout_constraintVertical_bias="0.508" android:layout_marginBottom="8dp"/>
        <android.support.design.button.MaterialButton
                android:layout_width="35dp"
                android:layout_height="wrap_content" android:id="@+id/profile_share_button"
                app:icon="@drawable/ic_share" app:iconSize="35dp"
                app:iconPadding="0dp" android:backgroundTint="@color/colorTranspery" android:padding="0dp"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image" android:stateListAnimator="@null"
                android:layout_marginTop="8dp"
                app:layout_constraintVertical_bias="0.508" android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/profile_image"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>