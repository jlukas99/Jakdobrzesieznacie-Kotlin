                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout3" android:layout_width="0dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/friends_profile_image"
