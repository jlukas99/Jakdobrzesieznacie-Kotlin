<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RegisterActivity"
        android:background="@drawable/background">

    <View
            android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_dark_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintVertical_bias="0.49"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            >

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:id="@+id/selectImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_color="@color/colorAccent"
                app:civ_circle_background_color="@color/colorButtonSecondary"
                app:civ_border_width="1dp"
                android:src="@color/colorTranspery"/>

        <ImageView
                android:src="@drawable/ic_select_image_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/selectImageIcon"
                app:layout_constraintStart_toStartOf="@+id/selectImage"
                app:layout_constraintEnd_toEndOf="@+id/selectImage"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/selectImage"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/select_picture_image"/>

        <TextView
                android:text="@string/select_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectImageText"
                app:layout_constraintStart_toStartOf="@+id/selectImage"
                app:layout_constraintEnd_toEndOf="@+id/selectImage"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/selectImage"
                android:fontFamily="@font/varela_round"
                android:typeface="normal"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.508"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/selectImageIcon"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_horizontal"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/selectImage"
                android:id="@+id/linearLayout3"
                android:layout_width="264.09dp">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:id="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorLigth"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

            <TextView
                    android:text="@string/create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/varela_round"
                    android:typeface="normal"
                    android:textAllCaps="true"/>

            <View
                    android:layout_height="2dp"
                    android:id="@+id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorLigth"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

        </LinearLayout>

        <EditText
                android:layout_width="264.09dp"
                android:layout_height="39dp"
                android:inputType="textEmailAddress"
                android:id="@+id/emailInput"
                android:hint="@string/email"
                android:singleLine="true"
                android:background="@drawable/input_overlay"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                android:textSize="12sp"
                android:fontFamily="@font/varela_round"
                android:paddingStart="54dp"
                android:paddingEnd="8dp"
                android:imeOptions="actionNext"
                tools:ignore="Autofill"/>

        <ImageView
                android:src="@mipmap/email_icon"
                android:layout_width="38.66dp"
                android:layout_height="38.66dp"
                android:id="@+id/emailImage"
                android:background="@drawable/input_overlay_icon"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="@+id/emailInput"
                app:layout_constraintTop_toTopOf="@+id/emailInput"
                app:layout_constraintBottom_toBottomOf="@+id/emailInput"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/email_image"/>

        <EditText
                android:layout_width="264.09dp"
                android:layout_height="39dp"
                android:id="@+id/passwordInput"
                android:hint="@string/password"
                android:singleLine="true"
                android:background="@drawable/input_overlay"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:fontFamily="@font/varela_round"
                android:paddingStart="54dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/emailInput"
                android:inputType="textPassword"
                android:paddingEnd="8dp"
                android:imeOptions="actionNext"
                tools:ignore="Autofill"/>

        <ImageView
                android:src="@mipmap/password_icon"
                android:layout_width="38.66dp"
                android:layout_height="38.66dp"
                android:id="@+id/passwordImage"
                android:background="@drawable/input_overlay_icon"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@+id/passwordInput"
                app:layout_constraintBottom_toBottomOf="@+id/passwordInput"
                app:layout_constraintStart_toStartOf="@+id/passwordInput"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/password_image"/>

        <EditText
                android:layout_width="264.09dp"
                android:layout_height="39dp"
                android:id="@+id/repasswordInput"
                android:hint="@string/re_password"
                android:singleLine="true"
                android:background="@drawable/input_overlay"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:fontFamily="@font/varela_round"
                android:paddingStart="54dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/passwordInput"
                android:inputType="textPassword"
                android:paddingEnd="8dp"
                android:imeOptions="actionDone"
                tools:ignore="Autofill"/>

        <ImageView
                android:src="@mipmap/password_icon"
                android:layout_width="38.66dp"
                android:layout_height="38.66dp"
                android:id="@+id/repasswordImage"
                android:background="@drawable/input_overlay_icon"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@+id/repasswordInput"
                app:layout_constraintStart_toStartOf="@+id/repasswordInput"
                app:layout_constraintBottom_toBottomOf="@+id/repasswordInput"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/password_image"/>

        <Spinner
                android:layout_width="264.09dp"
                android:layout_height="39dp"
                android:id="@+id/genderSpinner"
                android:background="@drawable/input_overlay"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/repasswordInput"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:entries="@array/gender_list"
                android:paddingStart="46dp"
                android:spinnerMode="dialog"
                android:prompt="@string/select_gender"
                tools:ignore="RtlSymmetry"/>

        <ImageView
                android:src="@mipmap/gender_icon"
                android:layout_width="38.66dp"
                android:layout_height="38.66dp"
                android:id="@+id/genderImage"
                android:background="@drawable/input_overlay_icon"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@+id/genderSpinner"
                app:layout_constraintStart_toStartOf="@+id/genderSpinner"
                app:layout_constraintBottom_toBottomOf="@+id/genderSpinner"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/gender_image"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="@string/create_account"
                app:cornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:backgroundTint="@color/colorPrimary"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:typeface="normal"
                android:fontFamily="@font/varela_round"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/genderSpinner"
                />

        <TextView
                android:text="@string/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_zaloguj"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/varela_round"
                android:textSize="12sp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/btn_send"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>