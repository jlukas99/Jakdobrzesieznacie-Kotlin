<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="50dp"
                                                   android:layout_marginBottom="4dp"
                                                   android:layout_marginTop="4dp">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/set_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/blank"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/colorPrimary"
            android:insetTop="0dp" android:textSize="14sp" android:textAlignment="center"
            android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
            app:layout_constraintStart_toStartOf="parent"
            app:icon="@drawable/ic_question_icon"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:insetBottom="0dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_friend_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:scaleType="centerCrop"
            app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>