<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.GameActivity" android:background="@drawable/background_main">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/background_dark"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout1"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="klasyczny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gamemode_text"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="true"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                android:layout_height="0dp"
                                                style="@style/SpinKitView.MultiplePulse"
                                                android:id="@+id/userLoadingImage"
                                                app:layout_constraintEnd_toEndOf="@+id/userProfileImage"
                                                app:layout_constraintStart_toStartOf="@+id/userProfileImage"
                                                app:layout_constraintBottom_toBottomOf="@+id/userProfileImage"
                                                app:layout_constraintTop_toTopOf="@+id/userProfileImage"
                                                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp"
            android:background="@drawable/input_overlay_white"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/linearLayout1"/>
    <TextView
            android:text="Janek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userNameText"
            app:layout_constraintStart_toEndOf="@+id/userProfileImage" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/userProfileImage"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/userProfileImage" app:layout_constraintVertical_bias="0.33999997"/>
    <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userPrecentText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/userProfileImage"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/userNameText"
            app:layout_constraintEnd_toEndOf="@+id/userNameText"
            app:layout_constraintStart_toStartOf="@+id/userNameText" app:layout_constraintVertical_bias="0.0"
            android:textSize="10sp"/>
    <TextView
            android:text="3 z 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/etapText"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/userProfileImage"
            app:layout_constraintTop_toTopOf="@+id/userProfileImage" android:textAllCaps="false"
            android:textSize="16sp" app:layout_constraintVertical_bias="0.63"/>
    <TextView
            android:text="ETAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userPrecentText2"
            android:textAlignment="center"
            android:textAllCaps="true" android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/etapText"
            app:layout_constraintEnd_toEndOf="@+id/etapText"
            app:layout_constraintStart_toStartOf="@+id/etapText" android:layout_marginBottom="18dp"/>
    <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                android:layout_height="0dp"
                                                style="@style/SpinKitView.MultiplePulse"
                                                android:id="@+id/friendLoadingImage"
                                                app:layout_constraintEnd_toEndOf="@+id/friendProfileImage"
                                                app:layout_constraintTop_toTopOf="@+id/friendProfileImage"
                                                app:layout_constraintStart_toStartOf="@+id/friendProfileImage"
                                                app:layout_constraintBottom_toBottomOf="@+id/friendProfileImage"
                                                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                                                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friendProfileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp"
            android:background="@drawable/input_overlay_white"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="@+id/linearLayout1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout1"/>
    <TextView
            android:text="Maciek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/friendNameText"
            android:textAlignment="center" android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/friendProfileImage"
            app:layout_constraintTop_toTopOf="@+id/friendProfileImage"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfileImage"
            app:layout_constraintVertical_bias="0.32999998"/>
    <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/friendPrecentText"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/friendNameText"
            app:layout_constraintStart_toStartOf="@+id/friendNameText"
            app:layout_constraintTop_toBottomOf="@+id/friendNameText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfileImage" app:layout_constraintVertical_bias="0.0"/>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/userProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" android:id="@+id/viewPager"/>
</android.support.constraint.ConstraintLayout>