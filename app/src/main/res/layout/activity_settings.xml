<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SettingsActivity"
        android:background="@drawable/background_main"
        android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout2" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/cardView_change_gender" android:layout_marginTop="24dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="OPCJE PREMIUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout3"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="USTAWIENIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp" android:id="@+id/cardView"
            app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_notification"
                    android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Powiadomienia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/notification_switch"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:checked="true"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:id="@+id/cardView2" app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_public"
                    android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Profil Publiczny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/public_profile_switch"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" android:checked="true"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:id="@+id/cardView_change_nick" app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_user"
                    android:id="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/new_nick"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.4"
                    app:layout_constraintStart_toEndOf="@+id/imageView7" android:layout_marginStart="16dp"
                    android:textSize="14sp" android:textAlignment="viewStart" android:visibility="gone"
                    android:hint="Wpisz nowy nick" android:singleLine="true"
                    app:layout_constraintEnd_toStartOf="@+id/save_button"
                    app:layout_constraintHorizontal_bias="0.0" android:maxLength="24"/>
            <TextView
                    android:text="Zmień swój nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_nick"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_hide_icon"
                    android:id="@+id/button_nick" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/text_nick"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0" android:rotation="90"
                    android:tint="@color/colorAccent"/>
            <com.github.ybq.android.spinkit.SpinKitView android:layout_width="20dp"
                                                        android:layout_height="20dp"
                                                        style="@style/SpinKitView.MultiplePulse"
                                                        android:id="@+id/loading_nick"
                                                        android:visibility="invisible"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        android:layout_marginEnd="16dp"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        android:layout_marginTop="16dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        android:layout_marginBottom="16dp"
                                                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                                                        android:layout_marginStart="8dp"
                                                        app:layout_constraintHorizontal_bias="1.0"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_check_icon"
                    android:id="@+id/save_button" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp"
                    android:tint="@color/colorAccent" app:layout_constraintStart_toEndOf="@+id/new_nick"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                    android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp"
            android:id="@+id/cardView_change_avatar" app:layout_constraintTop_toBottomOf="@+id/cardView_change_nick" app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_image"
                    android:id="@+id/imageVi" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Zmień swój avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_image"
                    app:layout_constraintStart_toEndOf="@+id/imageVi"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:maxWidth="290dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_hide_icon"
                    android:id="@+id/button_image" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/text_image"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0" android:rotation="90"
                    android:tint="@color/colorAccent"/>

            <com.github.ybq.android.spinkit.SpinKitView android:layout_width="20dp"
                                                        android:layout_height="20dp"
                                                        style="@style/SpinKitView.MultiplePulse"
                                                        android:id="@+id/loading_image"
                                                        android:visibility="gone"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        android:layout_marginTop="16dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        android:layout_marginBottom="16dp"
                                                        android:layout_marginEnd="16dp"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintStart_toEndOf="@+id/imageVi"
                                                        android:layout_marginStart="8dp"
                                                        app:layout_constraintHorizontal_bias="1.0"/>

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_check_icon"
                    android:id="@+id/save_image" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/text_image"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0"
                    android:tint="@color/colorAccent" android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp"
            android:id="@+id/cardView_change_gender" app:cardElevation="0dp" app:layout_constraintTop_toBottomOf="@+id/cardView_change_avatar"
            android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@mipmap/gender_icon"
                    android:id="@+id/imageV" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Zmień swoją płeć"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_gender"
                    app:layout_constraintStart_toEndOf="@+id/imageV"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <com.github.ybq.android.spinkit.SpinKitView android:layout_width="20dp"
                                                        android:layout_height="20dp"
                                                        style="@style/SpinKitView.MultiplePulse"
                                                        android:id="@+id/loading_gender"
                                                        android:visibility="gone"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        android:layout_marginTop="16dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        android:layout_marginBottom="16dp"
                                                        android:layout_marginEnd="16dp"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        android:layout_marginStart="8dp"
                                                        app:layout_constraintHorizontal_bias="1.0"
                                                        app:layout_constraintStart_toEndOf="@+id/imageV"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_hide_icon"
                    android:id="@+id/gender_button" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/text_gender"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0" android:rotation="90"
                    android:tint="@color/colorAccent"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/ic_check_icon"
                    android:id="@+id/save_gender" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/text_gender"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0"
                    android:tint="@color/colorAccent" android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp" android:id="@+id/cardView6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/colorDarkCard" app:cardCornerRadius="30dp" app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_color_palet"
                    android:id="@+id/imageV2" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Włącz wygląd premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textV2"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageV2" android:layout_marginStart="16dp"
                    android:textColor="@color/colorYellow"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/premium_color_switch"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:textColorLink="@color/colorYellow"
                    android:checked="false"
                    app:layout_constraintStart_toEndOf="@+id/textV2" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="57dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView6" app:cardBackgroundColor="@color/colorDarkCard"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:cardCornerRadius="30dp"
            app:cardElevation="0dp" android:id="@+id/cardView_premium">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/ic_corn"
                    android:id="@+id/imageV3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                    android:text="Zarządzaj abonamentem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textV3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageV3"
                    android:layout_marginStart="16dp" android:textColor="@color/colorYellow"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_hide_icon"
                    android:id="@+id/image3" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" android:rotation="90"
                    android:tint="@color/colorYellow" app:layout_constraintStart_toEndOf="@+id/textV3"
                    android:layout_marginStart="186dp" app:layout_constraintHorizontal_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout4" android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_weight="1" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView_premium">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view7"
