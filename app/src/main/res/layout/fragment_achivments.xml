<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".fragments.AchivmentsFragment"
                                                   android:background="@drawable/background_main">

    <TextView
            android:text="Pracujemy nad tą zakładką\nmuszisz uzbroić się w cierpliwość"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_achivment"
            android:textColor="@color/colorLigth" android:visibility="visible"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/image_achivment" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/image_achivment"
            android:visibility="visible" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.20999998"
            app:srcCompat="@drawable/ic_iconmonstr_medal_6" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout3"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="Osiągnięcia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="true"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>