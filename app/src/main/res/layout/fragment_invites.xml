<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.InvitesFragment"
                                                   android:background="@drawable/background_main">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout1"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    >

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="ZAPROSZENIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView1"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>

    <include android:layout_width="0dp" android:layout_height="wrap_content"
             layout="@layout/header_title_item" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp"
             app:layout_constraintTop_toBottomOf="@+id/linearLayout1" android:id="@+id/inviteHeader"
             android:visibility="visible"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content"
             layout="@layout/header_title_item" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp" android:id="@+id/searchHeader"
             app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:animateLayoutChanges="false"
            app:layout_constraintTop_toBottomOf="@+id/inviteHeader"
            android:orientation="horizontal" android:visibility="visible" android:paddingTop="8dp"/>

    <ImageView
            android:src="@drawable/card_background_dark"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchHeader"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="38.66dp"
            android:id="@+id/searchInput"
            android:hint="Wpisz nick znajomego..."
            android:textSize="14sp"
            android:background="@color/colorTranspery"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/searchImage" android:layout_marginStart="8dp"
            android:singleLine="true" android:ellipsize="start"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/searchCount"
            android:inputType="textPersonName" android:imeOptions="actionDone"/>

    <ImageView
            android:src="@drawable/ic_search_icon"
            android:layout_width="38.66dp"
            android:layout_height="0dp" android:id="@+id/searchImage"
            android:background="@drawable/input_overlay_white"
            android:padding="10dp"
            android:tint="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:text="0"
            android:layout_width="38.66dp"
            android:layout_height="0dp" android:id="@+id/searchCount"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/input_overlay_white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"/>

    <TextView
            android:text="Wpisz nick znajomego\naby wyszukiwanie sie powiodło uwzględnij duże litery"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/text_none_invite2"
            android:textColor="@color/colorLigth" android:visibility="visible"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/image_none_invite2" app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_none_invite2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput" android:layout_marginTop="32dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/ic_iconfinder_arrow_forward_216442" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.20999998"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/recyclerSearch"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:animateLayoutChanges="false"
    >
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>