<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".fragments.FriendsFragment" android:background="@drawable/background_main">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout3"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>

        <TextView
                android:text="GRAJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout2" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="TWOJA KOLEJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_height="80dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rv_round"
            tools:listitem="@layout/invite_item"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintHorizontal_bias="0.0" android:animateLayoutChanges="false"
            android:visibility="invisible" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="12dp" app:layout_constraintHeight_min="64dp"/>
    <ImageView
            android:src="@mipmap/games_icon"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_none_round" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="8dp" android:padding="10dp"/>
    <ImageButton
            android:src="@drawable/ic_hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_hide_round"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorTranspery"
            android:padding="6dp"
            android:elevation="0dp" style="@android:style/Widget.Material.ImageButton"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"/>
    <TextView
            android:text="Aktualnie nie masz żadnej tury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_none_round"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorLigth" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/image_none_round"/>
    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading_round"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorWhite"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="12dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout4" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/rv_round" android:layout_marginTop="12dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="ZNAJOMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <ImageButton
            android:src="@drawable/ic_hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_hide_friends"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorTranspery"
            android:padding="6dp"
            android:elevation="0dp" style="@android:style/Widget.Material.ImageButton"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout4"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"/>
    <ImageView
            android:src="@drawable/ic_user"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_none_friends" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:layout_marginTop="12dp"
            android:padding="14dp" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.RecyclerView
            android:layout_height="198dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rv_friends"
            tools:listitem="@layout/invite_item"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintHorizontal_bias="0.0" android:animateLayoutChanges="false"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Nie masz żadnych znajomych"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_none_friends"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorLigth" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/image_none_friends" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorWhite"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            android:id="@+id/loading_friends" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            android:layout_marginTop="16dp"/>

</android.support.constraint.ConstraintLayout>