<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="50dp"
                                             android:layout_marginBottom="4dp" android:layout_marginTop="4dp"
                                             android:id="@+id/friendLayout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/card_background_dark" android:id="@+id/imageView2"/>

    <com.github.ybq.android.spinkit.SpinKitView android:layout_width="32dp"
                                                android:layout_height="32dp"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                style="@style/SpinKitView.MultiplePulse"
                                                android:id="@+id/profileLoading"
                                                app:layout_constraintEnd_toEndOf="@+id/friends_profile"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/profile_name"
            android:maxLines="1" android:singleLine="true"
            android:text="..."
            app:layout_constraintEnd_toStartOf="@+id/btn_chat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/friends_profile"
            android:layout_marginEnd="8dp" android:maxLength="30"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/passa_count"
            android:maxLines="1" android:singleLine="true"
            android:text="..."
            app:layout_constraintStart_toEndOf="@+id/image_passa"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_chat"
            app:layout_constraintTop_toTopOf="@+id/image_passa" android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_passa" android:layout_marginStart="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friends_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:scaleType="centerCrop"
            app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp"/>


    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_hide_icon"
            android:id="@+id/btn_game" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            android:scaleType="centerInside" android:tint="@color/colorAccent"
            android:background="@android:color/transparent" style="@android:style/Widget.Material.ImageButton"
            app:layout_constraintVertical_bias="0.6" android:rotation="90"/>

    <com.github.ybq.android.spinkit.SpinKitView android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                style="@style/SpinKitView.MultiplePulse"
                                                android:id="@+id/addLoading"
                                                android:visibility="invisible"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                android:layout_marginEnd="16dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                android:layout_marginTop="8dp"
                                                app:layout_constraintTop_toTopOf="parent"
                                                android:layout_marginBottom="8dp"/>
    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_chat"
            android:id="@+id/btn_chat"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorTranspery"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="10dp"
            android:layout_height="10dp" app:srcCompat="@drawable/ic_gamepad"
            android:id="@+id/image_passa"
            android:background="@color/colorTranspery"
            app:layout_constraintStart_toStartOf="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:visibility="visible" android:scaleType="centerInside"/>

    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_heart_over"
            android:id="@+id/btn_favorite"
            app:layout_constraintEnd_toStartOf="@+id/btn_game" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorTranspery" android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>