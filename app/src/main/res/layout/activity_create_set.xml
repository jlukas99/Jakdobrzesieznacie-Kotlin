<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main"
        tools:context=".activity.CreateSetActivity">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout4"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>

        <TextView
                android:id="@+id/set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/varela_round"
                android:text="TWORZENIE ZESTAWU"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:transitionName="anim_name_profile"
                android:typeface="normal" android:textAllCaps="true"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            android:foregroundGravity="center_vertical|center_horizontal">

        <TextView
                android:text="..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pack_name_text"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pack_image" app:layout_constraintVertical_bias="0.0"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/pack_favorite"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/pack_chat"
                android:textColor="@color/colorWhite"/>

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/ic_edit_text"
                android:id="@+id/edit_text_button"
                android:tint="@color/colorWhite"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/pack_name_text" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/pack_favorite"
                app:layout_constraintTop_toTopOf="@+id/pack_name_text"
                app:layout_constraintBottom_toBottomOf="@+id/pack_name_text"
                app:layout_constraintHorizontal_bias="0.0"/>

        <EditText
                android:id="@+id/pack_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:background="@color/colorTranspery"
                android:singleLine="true" android:ellipsize="start"
                app:layout_constraintTop_toBottomOf="@+id/pack_image"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/pack_favorite"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/pack_chat"
                android:inputType="textPersonName" android:imeOptions="actionDone" android:visibility="visible"
                android:textAlignment="center"/>

        <ImageButton
                android:id="@+id/pack_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorTranspery"
                android:scaleType="fitCenter"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/pack_image"
                app:layout_constraintEnd_toStartOf="@+id/pack_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pack_image"
                app:srcCompat="@drawable/ic_6a8d83618b"/>

        <ImageButton
                android:id="@+id/pack_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorTranspery"
                android:scaleType="fitCenter"
                android:tint="@color/colorWhite"
                android:transitionName="anim_favorite_button_profile"
                app:layout_constraintBottom_toBottomOf="@+id/pack_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pack_image"
                app:srcCompat="@drawable/ic_public" app:layout_constraintStart_toEndOf="@+id/pack_image"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_pack_banswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/user_pack_canswer"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_pack_canswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintStart_toEndOf="@+id/text_nick" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:text="Ilość odpowiedzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/text_nick"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"/>

        <ImageView
                android:id="@+id/pack_image"
                android:layout_width="105dp"
                android:layout_height="105dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502" android:background="@drawable/input_overlay_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="32dp"
                app:srcCompat="@drawable/ic_pack_icon" android:padding="30dp"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/pack_quit_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="WRÓĆ"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorPrimary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:iconPadding="0dp" app:iconTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                app:backgroundTintMode="src_over"
                app:layout_constraintTop_toBottomOf="@+id/pack_add_question_btn" android:layout_marginTop="8dp"/>

        <TextView
                android:text="Ilość Pytań"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_nick" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                android:textColor="@color/colorLigth"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"/>

        <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/pack_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp">

            <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorLigth"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/varela_round"
                    android:text="INFORMACJE"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:typeface="normal"/>

            <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorLigth"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/pack_edit_question_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:fontFamily="@font/varela_round"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="lista stworzonych pytań"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:typeface="normal"
                app:backgroundTint="@color/colorButtonSecondary"
                app:cornerRadius="100dp"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/pack_add_question_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="menadżer pytań"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorButtonSecondary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:iconPadding="0dp"
                app:layout_constraintHorizontal_bias="0.49"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pack_edit_question_btn"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="18dp"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout5" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView10">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" android:id="@+id/view0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1"/>

            <TextView
                    android:text="USTAWIENIA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                    android:typeface="normal" android:textAllCaps="true"/>

            <View
                    android:layout_height="2dp" android:id="@+id/view9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>