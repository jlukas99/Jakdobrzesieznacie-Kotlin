<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".fragments.PackFragment"
                                                   android:background="@drawable/background_main">

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout3"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="@string/sets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/pack_btn_premium"
            android:layout_width="264.09dp"
            android:layout_height="38.66dp"
            android:text="@string/activate_premium"
            app:cornerRadius="100dp"
            app:backgroundTint="@color/colorButtonSecondary"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
            app:icon="@drawable/ic_corn" app:iconPadding="0dp" app:iconTint="@color/colorYellow"
            android:textColor="@color/colorYellow" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/include" android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/pack_btn_add"
            android:layout_width="264.09dp"
            android:layout_height="38.66dp"
            android:text="@string/create_set"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:backgroundTint="@color/colorPrimary"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            app:iconPadding="0dp" app:iconTint="@color/colorWhite"
            android:textColor="@color/colorWhite" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toBottomOf="@+id/pack_btn_premium"
            android:layout_marginTop="8dp" app:icon="@drawable/ic_pack_icon" android:visibility="gone"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/image_none_pack"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_pack_icon"
            app:layout_constraintTop_toBottomOf="@+id/include3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.20999998"
            tools:ignore="ContentDescription"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rv_pack"
            app:layout_constraintHorizontal_bias="0.0"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/include3" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="@string/sets_build_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_none_pack"
            android:textColor="@color/colorLigth" android:visibility="visible"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/image_none_pack" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content"
             layout="@layout/header_title_item" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp"
             app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:id="@+id/include"
             android:visibility="gone"/>

    <include android:layout_width="0dp" android:layout_height="wrap_content"
             layout="@layout/header_title_item" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="8dp"
             android:id="@+id/include3"
             android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pack_btn_add"
             android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>