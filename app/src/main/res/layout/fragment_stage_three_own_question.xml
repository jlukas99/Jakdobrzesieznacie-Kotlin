<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.StageThreeOwnQuestionFragment"
             android:background="@drawable/background_main">

    <android.support.design.button.MaterialButton
            android:id="@+id/nextQuestionBtn"
            android:layout_width="0dp"
            android:layout_height="38.66dp"
            android:text="następne pytanie"
            app:cornerRadius="100dp"
            app:backgroundTint="@color/colorPrimary"
            android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
            android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
            app:iconPadding="0dp" app:iconTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            app:backgroundTintMode="src_over"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_btn_d" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="48dp" android:layout_marginStart="48dp"
            android:id="@+id/linearLayout3"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gameStageTitle"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="true"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questionText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/card_background_dark" android:id="@+id/imageView2"/>


        <ImageView
                android:id="@+id/invite_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_stat_name"
                android:padding="12dp"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/questionEditText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:hint="Wpisz treść pytania" android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                app:layout_constraintStart_toEndOf="@+id/invite_profile"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer6"
                android:imeOptions="actionNext"
                android:inputType="text" android:ellipsize="start"/>

        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/dTextAnswer6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true" android:textAlignment="center"
                app:srcCompat="@drawable/ic_check_icon" android:tint="@color/colorAccent" android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/questionText" android:id="@+id/answer_btn_a">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/card_background_dark" android:id="@+id/imageView6"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/aTextAnswer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="A" android:background="@drawable/input_overlay_white"
                android:gravity="center_horizontal|center_vertical" android:textSize="24sp"
                android:textAllCaps="true" android:textAlignment="center" android:textColor="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/aAnswerEditText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:hint="Wpisz odpowiedź A" android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/aTextAnswer"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer5"
                android:enabled="false" android:imeOptions="actionNext" android:inputType="text"
                android:ellipsize="start"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/dTextAnswer5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true" android:textAlignment="center"
                app:srcCompat="@drawable/ic_check_icon" android:tint="@color/colorAccent" android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/answer_btn_a"
            android:id="@+id/answer_btn_b">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/card_background_dark" android:id="@+id/imageView8"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/bTextAnswer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="B" android:background="@drawable/input_overlay_white"
                android:gravity="center_horizontal|center_vertical" android:textSize="24sp"
                android:textAllCaps="true" android:textAlignment="center" android:textColor="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/bAnswerEditText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:hint="Wpisz odpowiedź B" android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/bTextAnswer" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer4"
                android:enabled="false" android:imeOptions="actionNext" android:ellipsize="start"
                android:inputType="text"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bAnswerTextView"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer4"
                app:layout_constraintStart_toEndOf="@+id/bTextAnswer"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/dTextAnswer4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true" android:textAlignment="center"
                app:srcCompat="@drawable/ic_check_icon" android:tint="@color/colorAccent" android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/answer_btn_b"
            android:id="@+id/answer_btn_c">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/card_background_dark" android:id="@+id/imageView9"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/dTextAnswer3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true" android:textAlignment="center"
                app:srcCompat="@drawable/ic_check_icon" android:tint="@color/colorAccent"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView9" android:visibility="invisible"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/cTextAnswer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="C" android:background="@drawable/input_overlay_white"
                android:gravity="center_horizontal|center_vertical" android:textSize="24sp"
                android:textAllCaps="true" android:textAlignment="center" android:textColor="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cAnswerEditText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:hint="Wpisz odpowiedź C" android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/cTextAnswer" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer3"
                android:enabled="false" android:imeOptions="actionNext" android:inputType="text"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/answer_btn_c"
            android:id="@+id/answer_btn_d">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
                android:background="@drawable/card_background_dark" android:id="@+id/imageView10"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/dTextAnswer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="D" android:background="@drawable/input_overlay_white"
                android:gravity="center_horizontal|center_vertical" android:textSize="24sp"
                android:textAllCaps="true" android:textAlignment="center" android:textColor="@color/colorWhite"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/dTextAnswer2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true" android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:srcCompat="@drawable/ic_check_icon" android:tint="@color/colorAccent" android:padding="12dp"
                android:visibility="invisible"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dAnswerEditText"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:hint="Wpisz odpowiedź D" android:textSize="14sp" android:textAlignment="center"
                android:background="@color/colorTranspery"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/dTextAnswer" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/dTextAnswer2"
                android:enabled="false" android:imeOptions="actionDone" android:inputType="text"
                android:ellipsize="start"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>