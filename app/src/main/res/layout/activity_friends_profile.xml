                android:layout_height="105dp"
                android:transitionName="anim_image_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorWhite" app:civ_border_width="1dp" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502" android:background="@drawable/input_overlay_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="32dp"/>

        <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    style="@style/SpinKitView.MultiplePulse"
                                                    android:id="@+id/friends_profile_loading_image"
                                                    android:visibility="visible"
                                                    app:layout_constraintEnd_toEndOf="@+id/friends_profile_image"
                                                    app:layout_constraintStart_toStartOf="@+id/friends_profile_image"
                                                    app:layout_constraintBottom_toBottomOf="@+id/friends_profile_image"
                                                    app:layout_constraintTop_toTopOf="@+id/friends_profile_image"
                                                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friends_profile_stats_games"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/friends_profile_stats_banswer"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"/>

        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friends_profile_stats_banswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/friends_profile_stats_canswer"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
