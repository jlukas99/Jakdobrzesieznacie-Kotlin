<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.InvitesFragment"
             android:background="@drawable/background_main">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout1"
            android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="ZAPROSZENIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView1"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout2" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
    >

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="PRZYCHODZĄCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <ImageButton
            android:src="@drawable/ic_hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_hide_przychodzace"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" android:layout_marginStart="4dp"
            android:background="@color/colorTranspery"
            app:layout_constraintHorizontal_bias="0.0" android:padding="6dp"
            android:elevation="0dp" style="@android:style/Widget.Material.ImageButton"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"/>

    <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loading"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorWhite"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:visibility="visible"/>

    <ImageView
            android:src="@drawable/ic_add_friends_icon"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_none_invite" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:visibility="invisible"/>
    <TextView
            android:text="Nie masz nowych zaproszeń"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_none_invite"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_none_invite" app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/colorLigth" android:visibility="invisible"/>
    <android.support.v7.widget.RecyclerView
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            tools:listitem="@layout/invite_item"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintHorizontal_bias="0.0" android:animateLayoutChanges="false"
            android:visibility="invisible"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout3" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" android:layout_marginTop="12dp">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:id="@+id/view8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="ZNAJDŹ ZNAJOMYCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                android:typeface="normal" android:textAllCaps="false"/>

        <View
                android:layout_height="2dp" android:id="@+id/view6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

    </LinearLayout>
    <ImageButton
            android:src="@drawable/ic_hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_hide_przychodzace2"
            android:background="@color/colorTranspery"
            android:padding="6dp"
            android:elevation="0dp" style="@android:style/Widget.Material.ImageButton"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3" android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="38.66dp"
            android:id="@+id/searchInput" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:inputType="text"
            android:background="@drawable/card_background_dark" android:hint="Wpisz nick..."
            android:paddingStart="54dp" android:paddingEnd="54dp" app:layout_constraintHorizontal_bias="1.0"
            android:textSize="14sp"/>
    <ImageView
            android:src="@drawable/ic_search_icon"
            android:layout_width="38.66dp"
            android:layout_height="38.66dp" android:id="@+id/searchImage"
            android:background="@drawable/input_overlay_white"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/searchInput"
            app:layout_constraintBottom_toBottomOf="@+id/searchInput"
            android:tint="@color/colorWhite"/>
    <TextView
            android:text="0"
            android:layout_width="38.66dp"
            android:layout_height="38.66dp" android:id="@+id/searchCount"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/input_overlay_white"
            app:layout_constraintEnd_toEndOf="@+id/searchInput"
            app:layout_constraintBottom_toBottomOf="@+id/searchInput"/>

    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading2"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorWhite" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible"/>

    <TextView
            android:text="@string/no_search_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_none_invite2"
            android:textColor="@color/colorLigth" android:visibility="gone"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal|center_vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput"/>
    <ImageView
            android:src="@drawable/ic_stat_name"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/image_none_invite2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput" android:layout_marginTop="12dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/text_none_invite2"
            app:layout_constraintVertical_bias="1.0"/>
    <android.support.v7.widget.RecyclerView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/recyclerSearch"
            tools:listitem="@layout/search_item"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:animateLayoutChanges="false"
            android:visibility="invisible">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>