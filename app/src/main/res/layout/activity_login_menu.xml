<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginMenuActivity" android:background="@drawable/background"
>

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dark_overlay" android:id="@+id/view3"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:src="@mipmap/logo"
                android:layout_width="156dp"
                android:layout_height="156dp" android:id="@+id/selectImage"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/btn_stworz_konto"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="STWÓRZ KONTO"
                app:cornerRadius="100dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginTop="16dp"
                app:backgroundTint="@color/colorButtonSecondary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/btn_send"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="ZALOGUJ"
                app:cornerRadius="100dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:backgroundTint="@color/colorPrimary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_stworz_konto"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_horizontal" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/selectImage" android:id="@+id/linearLayout3"
                android:layout_width="264.09dp">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" android:id="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1"/>
            <TextView
                    android:text="WITAJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textSize="20sp" android:fontFamily="@font/varela_round"
                    android:typeface="normal"/>

            <View
                    android:layout_height="2dp" android:id="@+id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

        </LinearLayout>
        <TextView
                android:text="Logując się akceptujesz warunki korzystania z aplikacji."
                android:layout_width="170dp"
                android:layout_height="29dp" android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btn_facebook"
                android:fontFamily="@font/varela_round" android:textSize="11sp" android:textAlignment="center"
                app:layout_constraintVertical_bias="0.225"/>

        <android.support.design.button.MaterialButton
                android:id="@+id/btn_facebook"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="zaloguj się za pomocą fb"
                app:cornerRadius="100dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:backgroundTint="@color/colorFacebook"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_send"
                app:icon="@mipmap/ic_facebook"/>

        <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/btn_facebook"
                app:layout_constraintStart_toStartOf="@+id/btn_facebook"
                app:layout_constraintTop_toTopOf="@+id/btn_facebook"
                app:layout_constraintBottom_toBottomOf="@+id/btn_facebook" android:visibility="invisible"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>