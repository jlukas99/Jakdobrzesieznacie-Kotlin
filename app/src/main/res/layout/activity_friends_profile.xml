                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1"/>
            <TextView
                    android:text="STATYSTYKI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
                    android:typeface="normal" android:textAllCaps="false"/>

            <View
                    android:layout_height="2dp" android:id="@+id/view5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1" android:layout_width="wrap_content"/>

        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    style="@style/SpinKitView.MultiplePulse"
                                                    android:id="@+id/user_profile_image_stats_loading"
                                                    android:visibility="visible"
                                                    android:layout_weight="1"
                                                    app:layout_constraintStart_toStartOf="@+id/user_profile_image_stats"
                                                    app:layout_constraintBottom_toBottomOf="@+id/user_profile_image_stats"
                                                    app:layout_constraintTop_toTopOf="@+id/user_profile_image_stats"
                                                    app:layout_constraintEnd_toEndOf="@+id/user_profile_image_stats"
                                                    android:layout_marginTop="2dp" android:layout_marginStart="2dp"
                                                    android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_stats"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorLigth" app:civ_border_width="1dp"
                android:background="@drawable/input_overlay_ligth"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="@+id/user_profile_stats_canswer"
                app:layout_constraintEnd_toEndOf="@+id/user_profile_stats_canswer"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"/>
        <com.github.ybq.android.spinkit.SpinKitView android:layout_width="0dp"
                                                    android:layout_height="0dp"
                                                    style="@style/SpinKitView.MultiplePulse"
                                                    android:id="@+id/friends_profile_image_stats_loading"
                                                    android:visibility="visible"
                                                    android:layout_weight="1"
                                                    app:layout_constraintEnd_toEndOf="@+id/friends_profile_image_stats"
                                                    app:layout_constraintStart_toStartOf="@+id/friends_profile_image_stats"
                                                    app:layout_constraintBottom_toBottomOf="@+id/friends_profile_image_stats"
                                                    app:layout_constraintTop_toTopOf="@+id/friends_profile_image_stats"
                                                    android:layout_marginStart="2dp" android:layout_marginTop="2dp"
                                                    android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friends_profile_image_stats"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorLigth" app:civ_border_width="1dp"
                android:background="@drawable/input_overlay_ligth"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="@+id/friends_profile_stats_canswer"
                app:layout_constraintStart_toStartOf="@+id/friends_profile_stats_canswer"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>
        <TextView
                android:text="Rozegrane gry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/user_profile_image_stats" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/friends_profile_image_stats"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/friends_profile_set_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="..."
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorButtonSecondary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:icon="@drawable/ic_pack_icon" app:iconPadding="0dp"
                app:layout_constraintHorizontal_bias="0.49"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout5"/>
        <android.support.design.button.MaterialButton
                android:id="@+id/friends_profile_gamemode_btn"
                android:layout_width="264.09dp"
                android:layout_height="38.66dp"
                android:text="..."
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                app:backgroundTint="@color/colorButtonSecondary"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="11sp" android:textAlignment="center"
                android:textAllCaps="true" android:typeface="normal" android:fontFamily="@font/varela_round"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                app:icon="@drawable/ic_gamepad" app:iconPadding="0dp"
                app:layout_constraintHorizontal_bias="0.49"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/friends_profile_set_btn"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friends_profile_stats_canswer"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLigth"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"/>

        <android.support.design.button.MaterialButton
                android:layout_width="35dp"
                android:layout_height="wrap_content" android:id="@+id/friends_profile_favorite"
                app:icon="@drawable/ic_heart_over" app:iconSize="35dp"
                app:iconPadding="0dp" android:backgroundTint="@color/colorTranspery" android:padding="0dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:stateListAnimator="@null"
                app:layout_constraintStart_toEndOf="@+id/friends_profile_image" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/friends_profile_image"
                android:transitionName="anim_favorite_button_profile"
                app:layout_constraintBottom_toBottomOf="@+id/friends_profile_image"/>

        <android.support.design.button.MaterialButton
                android:layout_width="35dp"
                android:layout_height="wrap_content" android:id="@+id/friends_profile_chat"
                app:icon="@drawable/ic_chat" app:iconSize="35dp"
                app:iconPadding="0dp" android:backgroundTint="@color/colorTranspery" android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/friends_profile_image" android:stateListAnimator="@null"
                android:transitionName="anim_message_button_profile"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/friends_profile_image"
                android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/friends_profile_image"
                app:layout_constraintHorizontal_bias="0.524"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout5" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="16dp">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" android:id="@+id/view0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorLigth"
                    android:layout_gravity="center" android:layout_weight="1"/>
            <TextView
                    android:text="Rozgrywka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textColor="@color/colorWhite" android:textAlignment="center" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textSize="16sp" android:fontFamily="@font/varela_round"
