<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="4dp" android:layout_marginTop="4dp"
                                                   android:id="@+id/friendLayout">

    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_heart_over"
            android:id="@+id/btn_favorite"
            android:background="@color/colorTranspery" android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/friends_profile"
            app:layout_constraintTop_toTopOf="@+id/friends_profile" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/friends_profile" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/friends_profile" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            tools:ignore="ContentDescription"/>

    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_chat"
            android:id="@+id/btn_chat"
            android:background="@color/colorTranspery"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/friends_profile" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/friends_profile"
            app:layout_constraintBottom_toBottomOf="@+id/friends_profile"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/friends_profile"
            tools:ignore="ContentDescription"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/profile_name"
            android:maxLines="1" android:singleLine="true"
            android:text="@string/blank"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textAlignment="center" android:layout_marginTop="8dp"/>


    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/input_overlay_white" android:id="@+id/imageView2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:ignore="ContentDescription"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friends_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>


    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/input_overlay_white" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/friends_profile"
            app:layout_constraintBottom_toBottomOf="@+id/friends_profile"
            app:layout_constraintStart_toStartOf="@+id/friends_profile"
            app:layout_constraintTop_toTopOf="@+id/friends_profile"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:elevation="8dp"
            tools:ignore="ContentDescription"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/games_icon"
            android:id="@+id/image_passa"
            android:background="@color/colorTranspery"
            android:visibility="visible" android:scaleType="centerInside"
            android:tint="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView5"
            android:padding="4dp"
            android:elevation="8dp"
            tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>